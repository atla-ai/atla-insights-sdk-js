{
  "compilerOptions": {
    "target": "es2018",                          
    "module": "commonjs",                    
    "lib": ["es2018"],                     
    "allowJs": true,
    "declaration": true,
    "outDir": "build",                          
    "rootDir": ".",
    "strict": true,         
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*", "examples/**/*"],
  "exclude": ["node_modules", "dist"]
}